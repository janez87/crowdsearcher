@import vendor

body
  font 12pt "Ubuntu", Verdana, Arial, sans-serif
  padding-top 70px

footer
  margin-top 2em

.vertical-center
  display inline-block
  vertical-align middle
  height 100%

.input-group
  margin-bottom: 5px

.input-group span.input-group-addon.input-small > input[type="checkbox"]
  position: relative;
  top: 2px;
.input-group span.input-group-addon.input-small+label
  border: 1px solid #ccc;
  border-top-right-radius: 3px;
  border-bottom-right-radius: 3px;
  height: 30px;
  padding: 5px 10px;
  font-size: 12px;
  line-height: 1.428571429;
  display: table-cell;
  width: 100%;
  margin-bottom: 0;

.panel .list-group .list-group-item-heading
  cursor: pointer



.dropzone
  cursor pointer

  border-width 0.3em
  border-style dashed

  text-align center
  padding 2em 1em

  border-color gray
  background-color lightgray

  &.error
    border-color red

  &.active
    border-color green

  input[type='file']
    width 0
    height 0
