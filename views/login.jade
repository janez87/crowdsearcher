extends layout

block content
  if errors.length>0
    .alert.alert-danger
      strong Login failed
      each message in errors
        | #{message}
  .row
    .col-md-6
      form.form-horizontal(role='form',action='login', method='post')
        .form-group
          label.col-md-3.control-label(for='user') Username
          .col-md-9
            input#user.form-control(type='text', name='username', placeholder='Insert username', autofocus)
        .form-group
          label.col-md-3.control-label(for='pass') Password
          .col-md-9
            input#pass.form-control(type='password', name='password', placeholder='password')
        .form-group
          .col-md-9.col-md-offset-3
            p: .btn-group
              button.btn.btn-primary(type='submit') LogIn
              a.btn.btn-default(href='register') Register

            hr

            if _.size( socialMap )>0
              p Or login with one of those social networks:
              .btn-group
                each social, name in socialMap
                 - var icon = social.icon || 'fa-'+name+'-square'
                  a.btn.btn-default(href='connect/'+name, title='Login with '+name)
                    i.fa(class=icon)
    .col-md-6
      .alert.alert-info
        strong
          i.fa.fa-info-circle
          |  Access
        p.
          You can use the following credentials: <br>
          <strong>user:</strong> demo<br>
          <strong>password:</strong> demo<br>
