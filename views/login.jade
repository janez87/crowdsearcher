extends layout

block append css
  link(rel='stylesheet', href='stylesheets/social-buttons-3.css')

block content
  if errorMessage.length>0
    .alert.alert-danger
      strong Login failed 
      each message in errorMessage
        | #{errorMessage}
  .row: .col-md-6
    form.form-horizontal(role='form',action='login', method='post')
      .form-group
        label.col-md-3.control-label(for='user') Username
        .col-md-9
          input#user.form-control(type='text', name='username', placeholder='Insert username')
      .form-group
        label.col-md-3.control-label(for='pass') Password
        .col-md-9
          input#pass.form-control(type='password', name='password', placeholder='password')
      .form-group
        .col-md-9.col-md-offset-3
          p: .btn-group
            button.btn.btn-primary(type='submit') LogIn
            a.btn.btn-default(href='register') Register
          p: .btn-group
            a.btn.btn-facebook(href='connect/facebook')
              i.icon-facebook-sign
              |  | LogIn with Facebook
            a.btn.btn-twitter(href='connect/twitter')
              i.icon-twitter
              |  | LogIn with Twitter