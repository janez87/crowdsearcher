!!! 5
html(prefix="og: http://ogp.me/ns#")
  head
    base(href=appBase)
    title CS manager 
      if title
        | - #{title}
    
    block meta
      include ../includes/metaOpenGraph
      include ../includes/meta

    block libCSS
      include ../includes/libCSS

    block css
      link(rel='stylesheet', href='stylesheets/style.css')

    block libScripts
      include ../includes/libJS
      script(src='javascripts/manager.js')

  body
    .navbar.navbar-default.navbar-fixed-top.navbar-inverse(role='navigation')
      .navbar-header
        button.navbar-toggle(data-toggle='collapse',data-target='.navbar-top-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href=appBase+'manage') CS Manager

      .collapse.navbar-collapse.navbar-top-collapse
        ul.nav.navbar-nav
          li: a(href='manage/jobs') Job list 
            i.fa.fa-list
          li: a(href='manage/job/new') Job 
            i.fa.fa-plus-square
          li: a(href='manage/task/new') Task 
            i.fa.fa-plus-square
        ul.nav.navbar-nav.navbar-right
          if user
            li: a(href='account')= user.username || user.displayName
            li: a(href='logout') Logout
          else
            li: a(href='register') Register
            li: a(href='login') Login

    .container
      header.row: .col-md-12
        block header
          h1=title
      section.row: .col-md-12
        block content
      footer.row: .col-md-12
        include ../includes/footer
    
    script(src='javascripts/manager.js')