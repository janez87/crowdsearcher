extends layout

block append css
  link(rel='stylesheet', href='stylesheets/dashboard.css')

block append libScripts
  script(src='libs/highcharts.js')

block append scripts
  script.
    var stats = !{JSON.stringify(stats)};

block append lateScripts
  script(src='javascripts/dashboard.js')

block header
  .row
    .col-md-6
      h1 Dashboard 
        small= stats.name

    .col-md-6.text-right
      code= stats.id
      p
      .btn-group
        if stats.name
          a.btn.btn-sm.btn-default(href='manage/task/'+stats.id)
            i.fa.fa-folder-open
            |  Task
        else
          a.btn.btn-sm.btn-default(href='manage/microtask/'+stats.id)
            i.fa.fa-folder-open
            |  Microtask
  hr

block content
  .row
    #donut-executions.col-md-3
    #donut-objects.col-md-3
    #donut-microtasks.col-md-3
    #donut-performers.col-md-3

  .panel.panel-default
    .panel-heading
      h4.panel-title
        i.fa.fa-list-alt
        |  
        a(data-toggle='collapse',href='#info') Informations
    #info.panel-collapse.collapse
      .panel-body
        .row
          #executionInfo.col-md-3.text-right.small
          #objectInfo.col-md-3.text-right.small
          #microtaskInfo.col-md-3.text-right.small
          #performerInfo.col-md-3.text-right.small
          

  .panel.panel-default
    .panel-heading
      h4.panel-title
        i.fa.fa-bar-chart-o
        |  
        a(data-toggle='collapse',href='#executions') Active executions and closed objects
    #executions.panel-collapse.collapse.in
      .panel-body

  .panel.panel-default
    .panel-heading
      h4.panel-title
        i.fa.fa-bar-chart-o
        |  
        a(data-toggle='collapse',href='#performers') Top 15 performers
    #performers.panel-collapse.collapse.in
      .panel-body